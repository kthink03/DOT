<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/textview_rounded_rect"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
       >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="오늘의 데이터는 무엇인가요?"
            android:fontFamily="@font/nanumsquare_acr"
            android:textSize="19sp"
            android:gravity="center">
        </TextView>

        <ImageButton
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:maxWidth="31dp"
            android:maxHeight="31dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cancel" />

        <ImageButton
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="304dp"
            android:layout_marginTop="13dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:maxWidth="26dp"
            android:maxHeight="26dp"
            android:scaleType="fitCenter"
            android:src="@drawable/save" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:textSize="20dp"
            android:autoSizeTextType="uniform"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/nanumsquare_acr"
            ></TextView>
        <EditText
            android:id="@+id/edittext_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_title"
            android:layout_marginTop="12dp"
            android:hint="제목을 입력해주세요."
            android:background="@null"
            ></EditText>
    </RelativeLayout>

    <EditText
        android:id="@+id/edittext_record"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="top"
        android:background="@null"
        android:hint="데이터를 입력해주세요."
       >

    </EditText>



</LinearLayout>
